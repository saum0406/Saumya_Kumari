{% stylesheet %}
  .announcement-bar {
    background: #F5F5F5;
    width: 100%;
    max-width: 1440px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 50px;
    margin: 0 auto;
  }

  .announcement-bar__content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    gap: 360px; /* space between brand, tagline, button */
  }

  .announcement-bar__content .brand {
    font-family: 'Jost', sans-serif;
    font-weight: 700;
    font-size: 18px;
    color: #000;
    text-transform: uppercase;
  }

  .announcement-bar__content .tagline {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
    color: #000;
    text-align: center;
    flex: 0 0 260px; /* fixed width like Figma */
  }

  .announcement-bar__content .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    background: #FFF544;
    width: 207px;
    height: 44px;
    border-radius: 4px;
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    border: 1.5px solid #000;
  }

  .announcement-bar__content .btn .arrow {
    font-weight: 700;
    font-size: 18px;
    line-height: 1;
  }
{% endstylesheet %}
