{% stylesheet %}
  .announcement-bar {
    background: #F5F5F5;
    width: 100%;
    max-width: 1440px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 50px;
    margin: 0 auto;
  }

  .announcement-bar__content {
    width: 100%;
    display: flex;
    align-items: center;        
    justify-content: space-between;
  }

  .announcement-bar__content .brand {
    font-family: 'Jost', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    color: #000;
  }

  .announcement-bar__content .tagline {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #000;
    text-align: center;
    flex: 1;                    
    display: flex;
    justify-content: center;    
  }

  .announcement-bar__content .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: #FFF544;
    width: 207px;
    height: 44px;
    border: none;               
    border-radius: 4px;
    font-family: 'Jost', sans-serif;
    font-weight: 500;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    white-space: nowrap;
    cursor: pointer;
  }

  .announcement-bar__content .btn .arrow {
    font-weight: 900;
    font-size: 25px;
    line-height: 2;
  }

  .announcement-bar__content .btn {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    vertical-align: middle !important;
    margin: 0 !important;
    padding: 0 20px !important;
    height: 44px !important;
    line-height: 44px !important;
}

{% endstylesheet %}
