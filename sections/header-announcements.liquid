{% stylesheet %}
  .announcement-bar {
    background: #F5F5F5;
    width: 100%;
    max-width: 1440px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 50px;
    margin: 0 auto;
    position: relative;
  }

  .announcement-bar__content {
    width: 100%;
    position: relative;
  }

  .announcement-bar__content .brand {
    font-family: 'Jost', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    color: #000;
    position: absolute;
    left: 50px;   /* aligns with Figma padding */
    top: 50%;
    transform: translateY(-50%);
  }

  .announcement-bar__content .tagline {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: #000;
    text-align: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%); /* true center */
    white-space: nowrap;
  }

  .announcement-bar__content .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: #FFF544;
    width: 207px;
    height: 44px;
    border: 1.5px solid #000;
    border-radius: 4px;
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    position: absolute;
    right: 50px;  /* aligns with Figma padding */
    top: 50%;
    transform: translateY(-50%);
    white-space: nowrap;
  }

  .announcement-bar__content .btn .arrow {
    font-weight: 700;
    font-size: 18px;
    line-height: 1;
  }
{% endstylesheet %}
