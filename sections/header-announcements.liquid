<aside class="announcement-bar">
  <div class="announcement-bar__content">
    <span class="brand">TISSO VISON</span>
    <span class="tagline">Find the ideal gift for your loved ones.</span>
    <a href="/collections/gifts" class="btn">
      CHOOSE GIFT <span class="arrow">→</span>
    </a>
  </div>
</aside>

{% stylesheet %}
  .announcement-bar {
    background: #F5F5F5;
    width: 100%;
    max-width: 1440px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 50px;
    margin: 0 auto;
  }

  .announcement-bar__content {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .announcement-bar__content .brand {
    font-family: 'Jost', sans-serif;
    font-weight: 700;
    font-size: 18px;
    text-transform: uppercase;
    color: #000;
    flex: 0 0 auto; /* fixed, no stretching */
  }

  .announcement-bar__content .tagline {
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
    color: #000;
    text-align: center;
    flex: 1;               /* take up center space */
    white-space: nowrap;   /* keep tagline in one line */
  }

  .announcement-bar__content .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background: #FFF544;
    width: 207px;
    height: 44px;
    border: 1.5px solid #000;
    border-radius: 4px;
    font-family: 'Jost', sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-transform: uppercase;
    text-decoration: none;
    color: #000;
    flex: 0 0 auto; /* fixed width, won’t shrink */
    white-space: nowrap;   /* prevents wrapping */
  }

  .announcement-bar__content .btn .arrow {
    font-weight: 700;
    font-size: 18px;
    line-height: 1;
  }
{% endstylesheet %}
