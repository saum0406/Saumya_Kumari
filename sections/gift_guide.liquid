{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero"
    }
  ]
}
{% endschema %}

<section class="gift-guide-hero" 
  {% if section.settings.background_image %} 
    style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');" 
  {% endif %}>
  
  <div class="gift-guide-hero__overlay">
    <div class="gift-guide-hero__content container">
      <h2 class="gift-guide-hero__title">{{ section.settings.heading }}</h2>
      <p class="gift-guide-hero__subtitle">{{ section.settings.subheading }}</p>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="gift-guide-hero__btn">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.gift-guide-hero {
  position: relative;
  width: 100%;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  text-align: center;
  color: #000; /* adjust depending on background */
  min-height: 500px; /* adjust height to match Figma */
  display: flex;
  align-items: center;
  justify-content: center;
}

.gift-guide-hero__overlay {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
}

.gift-guide-hero__content {
  max-width: 800px;
}

.gift-guide-hero__title {
  font-size: 40px;
  font-weight: bold;
  margin-bottom: 20px;
}

.gift-guide-hero__subtitle {
  font-size: 18px;
  margin-bottom: 30px;
  line-height: 1.5;
}

.gift-guide-hero__btn {
  display: inline-block;
  background: black;
  color: white;
  padding: 14px 28px;
  border-radius: 4px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s;
}

.gift-guide-hero__btn:hover {
  background: #333;
}
</style>
