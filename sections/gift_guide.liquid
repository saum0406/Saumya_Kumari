{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero"
    }
  ]
}
{% endschema %}

<section class="gift-guide-hero">
  <div class="gift-guide-hero__background">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | image_url: width: 1600 }}" alt="{{ section.settings.title }}" loading="lazy">
    {% endif %}
  </div>

  <div class="gift-guide-hero__content container">
    <h2 class="gift-guide-hero__title">{{ section.settings.title }}</h2>
    <p class="gift-guide-hero__text">{{ section.settings.text }}</p>

    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="gift-guide-hero__btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
.gift-guide-hero {
  position: relative;
  text-align: center;
  padding: 60px 20px;
  background: #fff;
}

.gift-guide-hero__background img {
  width: 100%;
  height: auto;
  display: block;
}

.gift-guide-hero__content {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  margin-top: -120px; /* pulls text up over the background */
  background: rgba(255,255,255,0.9);
  padding: 40px 20px;
  border-radius: 8px;
}

.gift-guide-hero__title {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 15px;
}

.gift-guide-hero__text {
  font-size: 16px;
  color: #333;
  margin-bottom: 25px;
}

.gift-guide-hero__btn {
  background: #000;
  color: #fff;
  padding: 12px 24px;
  text-decoration: none;
  text-transform: uppercase;
  font-weight: bold;
  border-radius: 4px;
  display: inline-block;
}
{% endstylesheet %}
