{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero"
    }
  ]
}
{% endschema %}

<section class="gift-guide-hero">
  <div class="gift-guide-hero__bg">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Gift Guide Background" />
    {% endif %}
  </div>
  <div class="gift-guide-hero__content container">
    <h2 class="gift-guide-hero__title">{{ section.settings.heading }}</h2>
    <p class="gift-guide-hero__subtitle">{{ section.settings.subheading }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="gift-guide-hero__btn">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.gift-guide-hero {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.gift-guide-hero__bg img {
  width: 100%;
  height: auto;
  display: block;
}

.gift-guide-hero__content {
  position: relative;
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
  padding: 40px 20px;
  background: #fff;
}

.gift-guide-hero__title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 15px;
}

.gift-guide-hero__subtitle {
  font-size: 16px;
  color: #444;
  margin-bottom: 25px;
}

.gift-guide-hero__btn {
  display: inline-block;
  background: black;
  color: white;
  padding: 12px 25px;
  border-radius: 2px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s;
}

.gift-guide-hero__btn:hover {
  background: #333;
}
</style>
