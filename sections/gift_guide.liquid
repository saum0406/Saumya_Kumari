
{% schema %}
{
  "name": "Gift Guide Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "SHOP NOW"
    }
  ],
  "blocks": [
    {
      "type": "vector",
      "name": "Vector Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "vector_image",
          "label": "Upload vector (SVG/PNG)"
        },
        {
          "type": "range",
          "id": "top",
          "label": "Top position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "left",
          "label": "Left position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "size",
          "label": "Width (px)",
          "min": 20,
          "max": 400,
          "step": 5,
          "default": 100
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="gift-guide-hero">
  <div class="gift-guide-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subtext }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="gift-guide-btn">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>

  {% for block in section.blocks %}
    <div class="gift-guide-vector" 
         style="top:{{ block.settings.top }}%; 
                left:{{ block.settings.left }}%; 
                width:{{ block.settings.size }}px;">
      {% if block.settings.vector_image %}
        <img src="{{ block.settings.vector_image | img_url: '400x' }}" alt="vector">
      {% endif %}
    </div>
  {% endfor %}
</div>

<style>
.gift-guide-hero {
  position: relative;
  width: 100%;
  min-height: 600px;
  background: #fff;
  padding: 60px 20px;
  overflow: hidden;
}
.gift-guide-content {
  max-width: 500px;
  position: relative;
  z-index: 5;
}
.gift-guide-btn {
  display: inline-block;
  padding: 12px 24px;
  background: black;
  color: white;
  text-decoration: none;
  margin-top: 20px;
}
.gift-guide-vector {
  position: absolute;
  z-index: 1;
}
.gift-guide-vector img {
  width: 100%;
  height: auto;
  display: block;
}
</style>
